@using BootstrapSupport
@model AccuWeatherProject.Models.PageViewModel

<div class="container-fluid well"> 
    <div class="span11 ">
        <div id="PV_CurrentConditions">
            @Html.Partial("_CurrentConditions", Model)
        </div>
    </div>
    <div >    
        <table class="table table-hover table-condensed tableBackColor">
             <tr>               
              <th COLSPAN=6 style="width:10%"><h3> 24 Hour Forecast</h3></th>
                      
            </tr>
            <tr>               
                <th style="width:10%">Day</th>
                <th style="width:10%">Hour</th>
                <th style="width:10%"></th>
                <th style="width:40%">Conditions</th>
                <th style="width:10%">Temp</th>   
                <th style="width:20%">Precipitation</th>           
            </tr>
        </table>
    </div>
    <div id="PV_24HourForecast" class="tableHeight ">
        @Html.Partial("_24HourForecast", Model)       
    </div>
    <div id="PV_Chart">
    @Html.Partial("_Chart", Model)
    </div>
</div>
